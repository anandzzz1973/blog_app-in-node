<div class="container">
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card" style="width: 18rem;">
                    <img src="<%= blog.image %>" class="card-img-top" alt="..." style="width: 275px; height: 300px;">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.title %></h5>
                      <p class="card-text"><%= blog.description.substring(0,40) %>...</p>
                      <p class="card-text"><%= blog.date %></p>
                      <a href="/blogs/<%= blog._id %> " class="btn btn-info btn-lg btn-block">More info</a>
                      <br>
                      <a href="/blogs/<%= blog._id %>/edit " class="btn btn-info btn-lg btn-block">Update</a>
                      <br>
                      <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-info btn-lg btn-block" type="submit">Delete</button>
                      </form>

                    </div>
                  </div>
            </div>
         <% }); %>
    </div>
</div>




